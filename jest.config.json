{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": ["**/*.test.ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "js", "json"],
  "collectCoverageFrom": [
    "language-aware-comment-tasks.ts",
    "!**/node_modules/**",
    "!**/tests/**"
  ]
}