{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": ["**/*.test.ts"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "collectCoverageFrom": ["src/**/*.ts", "!src/main.ts", "!tests/**"],
  "moduleNameMapper": {
    "^obsidian$": "<rootDir>/__mocks__/obsidian.ts"
  }
}
